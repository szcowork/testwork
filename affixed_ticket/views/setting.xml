<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <record id="ticket_config_settings_form" model="ir.ui.view">
            <field name="name">设置</field>
            <field name="model">affixed.ticket.settings</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="设置" class="oe_form_configuration" >
                    <header>
                        <button string="配置" type="object" name="set_values" class="oe_highlight"/>	
                        
                        <button string="取消" type="object" name="cancel" class="oe_link"/>		 				 				 				 				 	                        
                    </header>
                    <sheet>
                        <separator string="账户信息配置"/>
                        <div>
                            <div>
                                <group>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="bank_day" class="oe_inline"/>
                                    <field name="out_day" class="oe_inline"/>
                                </group>
                            </div>
                            <div>
                                <group>
                                    <field name="first_crash" class="oe_inline"/>
                                    <field name="first_ticket" class="oe_inline"/>
                                </group>
                            </div>
                            <separator string="自动化设置"/>
                            <div>
                                <group>
                                    <field name="active_zidong" class="oe_inline"/>
                                </group>
                            </div>
                        </div>
                        <!-- <group>
                                <group string="日记账">
                                    <field name="journal" class="oe_inline"/>
                                </group>
                        </group> -->
                        <group>
                            <!-- <group> -->
                                <group string="购票凭证科目设置">
                                    <field name="template"/>
                                    <!-- <field name="jie"/>
                                    <field name="dai"/> -->
                                </group>
                                <group string="兑付凭证科目设置">
                                    <field name="template_1"/>
                                    <!-- <field name="jie_1"/>
                                    <field name="dai_1"/> -->
                                </group>
                            <!-- </group> -->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="ticket_config_settings_action" model="ir.actions.act_window">
            <field name="name">设置</field>
            <field name="res_model">affixed.ticket.settings</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>
    </data>
</odoo>