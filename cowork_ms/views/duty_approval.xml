<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_form_duty_approval">
        <field name="name">请假申请</field>
        <field name="model">duty.approval</field>
        <field name="arch" type="xml">
            <form string="请假申请">
                <sheet>
                    <!-- <group>
                        <field name="name"/>
                        <field name="eply"/>
                        <field name="posi"/>
                        <field name="dtype"/>
                        <field name="reason"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="day_last"/>
                    </group> -->
                    <div id="o_employee_container">
                     <div id="o_employee_main">
                      <group>
                          <field name="approval_state" invisible="1"/>
                          <field name="name" attrs="{'readonly': [('approval_state', '!=', 'draft')]}"/>
                          <field name="start_approval_employee_id" attrs="{'readonly': [('approval_state', '!=', 'draft')]}"/>
                          <field name="job_id" attrs="{'readonly': [('approval_state', '!=', 'draft')]}"/>
                          <field name="reason" attrs="{'readonly': [('approval_state', '!=', 'draft')]}"/>
                          <field name="start_date" attrs="{'readonly': [('approval_state', '!=', 'draft')]}"/>
                          <field name="end_date" attrs="{'readonly': [('approval_state', '!=', 'draft')]}"/>
                          <field name="day_last" attrs="{'readonly': [('approval_state', '!=', 'draft')]}"/>
                          <field name="dtype" attrs="{'readonly': [('approval_state', '!=', 'draft')]}"/>
                      </group>
                     </div>
                     <div id="o_employee_right">
                      <h4 class="o_org_chart_title mb16 mt0">审批流程</h4>
                      <field name="tem_approval_field" widget="einfo_hr_org_chart"/>
                     </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_tree_duty_approval">
        <field name="name">请假申请</field>
        <field name="model">duty.approval</field>
        <field name="arch" type="xml">
            <tree string="请假申请">
                <field name="name"/>
                <field name="start_approval_employee_id"/>
                <field name="job_id"/>
                <field name="dtype"/>
                <field name="reason"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="day_last"/>
                <field name="approval_state"/>
                <field name="current_approval_employee_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_duty_approval">
        <field name="name">请假申请</field>
        <field name="res_model">duty.approval</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>