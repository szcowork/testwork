<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_form_bom_appoval">
        <field name="name">BOM申请单</field>
        <field name="model">bom.appoval</field>
        <field name="arch" type="xml">
            <form string="BOM申请单">
                <sheet>
                    <div id="o_employee_container">
                    <div id="o_employee_main">
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <group>
                            <field name="name"/>
                            <field name="product_tmpl_id"/>
                            <field name="product_qty"/>

                            <field name="ready_to_produce"/>
                            <field name="type"/>
                        </group>
                        <group>
                            <field name="bom_line_ids">
                                <tree editable="bottom">
                                    <field name="product_tmpl_id"/>
                                    <field name="product_qty"/>
                                </tree>
                            </field>
                        </group>
                    </div>
                    <div id="o_employee_right">
                    <h4 class="o_org_chart_title mb16 mt0">审批流程</h4>
                    <field name="tem_approval_field" widget="einfo_hr_org_chart"/>
                    </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_tree_bom_appoval">
        <field name="name">BOM申请单</field>
        <field name="model">bom.appoval</field>
        <field name="arch" type="xml">
            <tree string="BOM申请单" default_order="write_date desc">
                <field name="name"/>
                <field name="product_tmpl_id"/>
                <field name="product_qty"/>
                <field name="approval_state"/>
                <field name="current_approval_employee_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_bom_appoval">
        <field name="name">BOM申请单</field>
        <field name="res_model">bom.appoval</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
