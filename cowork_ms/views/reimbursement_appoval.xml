<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_form_reimbursement_appoval">
        <field name="name">报销申请</field>
        <field name="model">reimbursement.appoval</field>
        <field name="arch" type="xml">
            <form string="报销申请">
                <sheet>
                    <!-- <group>
                        <field name="name"/>
                        <field name="eply"/>
                        <field name="department"/>
                        <field name="posi"/>
                        <field name="business_period"/>
                        <field name="account_name"/>
                        <field name="bank_name"/>
                        <field name="bank_code"/>
                        <field name="total"/>
                        <field name="invoice_document"/>
                    </group> -->
                    <div id="o_employee_container">
                     <div id="o_employee_main">
                      <group>
                          <field name="approval_state" invisible="1"/>
                          <field name="name" attrs="{'readonly': [('approval_state', '!=', 'draft')]}"/>
                          <field name="start_approval_employee_id" attrs="{'readonly': [('approval_state', '!=', 'draft')]}"/>
                          <field name="department" attrs="{'readonly': [('approval_state', '!=', 'draft')]}"/>
                          <field name="job_id" attrs="{'readonly': [('approval_state', '!=', 'draft')]}"/>
                          <field name="business_period" attrs="{'readonly': [('approval_state', '!=', 'draft')]}"/>
                          <field name="account_name" attrs="{'readonly': [('approval_state', '!=', 'draft')]}"/>
                          <field name="bank_name" attrs="{'readonly': [('approval_state', '!=', 'draft')]}"/>
                          <field name="bank_code" attrs="{'readonly': [('approval_state', '!=', 'draft')]}"/>
                          <field name="total" attrs="{'readonly': [('approval_state', '!=', 'draft')]}"/>
                          <field name="invoice_document" attrs="{'readonly': [('approval_state', '!=', 'draft')]}"/>
                      </group>
                     </div>
                     <div id="o_employee_right">
                      <h4 class="o_org_chart_title mb16 mt0">审批流程</h4>
                      <field name="tem_approval_field" widget="einfo_hr_org_chart"/>
                     </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_tree_reimbursement_appoval">
        <field name="name">报销申请</field>
        <field name="model">reimbursement.appoval</field>
        <field name="arch" type="xml">
            <tree string="报销申请">
                <field name="name"/>
                <field name="start_approval_employee_id"/>
                <field name="department"/>
                <field name="job_id"/>
                <field name="business_period"/>
                <field name="account_name"/>
                <field name="bank_name"/>
                <field name="bank_code"/>
                <field name="total"/>
                <field name="invoice_document"/>
                <field name="approval_state"/>
                <field name="current_approval_employee_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_reimbursement_appoval">
        <field name="name">报销申请</field>
        <field name="res_model">reimbursement.appoval</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
