<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_form_supplier_approval">
        <field name="name">供应商审批</field>
        <field name="model">supplier.approval</field>
        <field name="arch" type="xml">
            <form string="供应商审批">
                <header>
                    <button name="button_approval" states="draft" string="提交审批" type="object" class="oe_highlight" groups="purchase.group_purchase_user,purchase.group_purchase_manager"/>
                    <button name="button_to_pass" states="approval" string="审批通过" type="object" class="oe_highlight" groups="purchase.group_purchase_manager"/>
                    <button name="button_draft" states="cancel" string="设为草稿" type="object"/>
                    <button name="button_cancel" states="approval" string="取消" type="object" groups="purchase.group_purchase_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approval,pass" readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <h1>
                        <field name="name" placeholder="名称" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </h1>
                    <group>
                        <group>
                            <label for="street" string="地址"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="地区街道" class="o_address_street" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="city" placeholder="城市" class="o_address_city" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="state_id" class="o_address_state" placeholder="省/州" options="{&quot;no_open&quot;: True}" context="{'country_id': country_id, 'zip': zip}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="zip" placeholder="邮编" class="o_address_zip" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="country_id" placeholder="国家/地区" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </div>
                            <field name="vat" placeholder="e.g. BE0477472701" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="material_class_id" widget="many2many_tags" options="{'no_create': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="phone" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="mobile" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="email" attrs="{'readonly': [('state', '!=', 'draft')]}" widget="url"/>
                            <field name="website" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                    <field name="aptitute" attrs="{'readonly': [('state', '!=', 'draft')]}">
                        <tree editable="bottom">
                            <field name="name" required="1"/>
                            <field name="file"/>
                        </tree>
                    </field>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_tree_supplier_approval">
        <field name="name">供应商审批</field>
        <field name="model">supplier.approval</field>
        <field name="arch" type="xml">
            <tree string="供应商审批" default_order="write_date desc">
                <field name="name"/>
                <field name="material_class_id" widget="many2many_tags"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_search_supplier_approval">
        <field name="name">供应商审批</field>
        <field name="model">supplier.approval</field>
        <field name="arch" type="xml">
            <search string="供应商审批">
                <field name="name" filter_domain="[('name','ilike',self)]"/>
                <field name="vat" filter_domain="[('vat','ilike',self)]"/>
                <field name="phone" filter_domain="[('phone','ilike',self)]"/>
                <field name="mobile" filter_domain="[('mobile','ilike',self)]"/>
                <field name="state_id"/>
                <field name="state"/>
                <field name="material_class_id"/>
                <filter name="state_id" string="省/州" context="{'group_by':'state_id'}"/>
                <filter name="state" string="状态" context="{'group_by':'state'}"/>
                <filter name="material_class_id" string="供应商类型" context="{'group_by':'material_class_id'}"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_supplier_approval">
        <field name="name">供应商审批</field>
        <field name="res_model">supplier.approval</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <menuitem
            action="action_supplier_approval"
            id="menu_supplier_approval"
            parent="purchase.menu_purchase_root"
            sequence="2"/>
</odoo>
