<odoo>
    <record id="view_material_wizard_form" model="ir.ui.view">
        <field name="name">变更方案设计明细</field>
        <field name="model">material.wizard</field>
        <field name="arch" type="xml">
            <form string="变更方案设计明细">
                <h1>
                    <field name="bom_id" readonly="1"/>
                </h1>
                <group>
                    <field name="material_part_id" invisible="1"/>
                    <field name="style" invisible="1"/>
                    <field name="class_categ_id" options="{'no_create':True}"/>
                    <field name="class_id" domain="[('categ_id','=',class_categ_id)]" options="{'no_create':True}"/>
                    <field name="categ_id"/>
                    <field name="product_tmpl_id" domain="[('categ_id','=',categ_id)]" context="{'default_categ_id':categ_id}"/>
                    <field name="brand_id"/>
                    <field name="count"/>
                    <field name="purchase_buy"/>
                    <field name="uom_id"/>
                    <field name="plan_date"/>
                    <field name="comments"/>
                </group>
                <group invisible="1">
                    <field name="origin_class_categ_id" options="{'no_create':True}"/>
                    <field name="origin_class_id" domain="[('categ_id','=',class_categ_id)]" options="{'no_create':True}"/>
                    <field name="origin_categ_id"/>
                    <field name="origin_product_tmpl_id" domain="[('categ_id','=',categ_id)]" context="{'default_categ_id':categ_id}"/>
                    <field name="origin_brand_id"/>
                    <field name="origin_count"/>
                    <field name="origin_uom_id"/>
                    <field name="origin_comments"/>
                </group>
                <footer>
                    <button name="action_to_confirm" string="确认" type="object" class="btn-primary"/>
                    <button string="取消" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>