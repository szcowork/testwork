<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_form_cowork_quote_order">
        <field name="name">项目报价单</field>
        <field name="model">cowork.quote.order</field>
        <field name="arch" type="xml">
            <form string="项目报价单">
                <header>
                    <button name="button_estimate_b" string="商务部确认" type="object" class="oe_highlight" states='business'/>
                    <button name="button_return_estimate_b" string="驳回" type="object" class="oe_highlight" states='business'/>

                    <button name="button_estimate_t" string="技术部确认" type="object" class="oe_highlight" states='technology'/>
                    <button name="button_return_estimate_t" string="驳回" type="object" class="oe_highlight" states='technology'/>

                    <button name="button_estimate_p" string="项目管理部确认" type="object" class="oe_highlight" states='project'/>
                    <button name="button_return_estimate_p" string="驳回" type="object" class="oe_highlight" states='project'/>

                    <button name="button_estimate_d" string="副总经理确认" type="object" class="oe_highlight" states='deputy'/>
                    <button name="button_return_estimate_d" string="驳回" type="object" class="oe_highlight" states='deputy'/>
                    <button name="action_to_bom" string="物料方案" type="object" class="oe_highlight" states="general"/>
                    <button name="button_return_estimate_g" string="驳回" type="object" class="oe_highlight" states='general'/>
                    <button name="action_to_draft" string="设为草稿" type="object" states='cancel'/>
                    <field name="state" widget="statusbar" statusbar_visible="business,technology,project,deputy,general" readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" class="oe_stat_button" icon="fa-bars" string="物料方案" name="button_material_scheme_order"/>
                        <button type="object" class="oe_stat_button" icon="fa-shopping-bag" string="采购申请" name="button_to_requisition"/>
                    </div>
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                    <group>
                        <field name="project_id" attrs="{'readonly': [('state', '!=', 'business')]}"/>
                        <field name="title" attrs="{'readonly': [('state', '!=', 'business')]}"/>
                        <field name="partner_id" attrs="{'readonly': [('state', '!=', 'business')]}"/>
                        <field name="contact_id" attrs="{'readonly': [('state', '!=', 'business')]}"/>
                    </group>
                    <group string="物料成本">
                        <field name="material_cost_details_lines" nolabel="1" attrs="{'readonly': [('state', '=', 'general')]}">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="count"/>
                                <field name="class_id"/>
                                <field name="total_cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="sale_cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="state" invisible="1"/>
                                <button type="object" class="oe_highlight" name="edit_spare_parts" string="编辑组件" attrs="{'invisible': [('state', '=', 'general')]}"/>
                            </tree>
                        </field>
                    </group>
                    <group string="人力成本">
                        <field name="labor_cost_lines" nolabel="1" attrs="{'readonly': [('state', '=', 'general')]}">
                            <tree editable="bottom">
                                <field name="job_id"/>
                                <field name="count"/>
                                <field name="hours_per_day"/>
                                <field name="total_hours"/>
                                <field name="unit_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="total_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="total_quote" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="state" invisible="1"/>
                                <button type="object" class="oe_highlight" name="edit_spare_parts" string="编辑人力信息" attrs="{'invisible': [('state', '=', 'general')]}"/>
                            </tree>
                        </field>
                    </group>
                    <group class="oe_subtotal_footer oe_right">
                        <div class="oe_subtotal_footer_separator oe_inline">
                            <label for="amount"/>
                        </div>
                        <field name="amount" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" readonly="1"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_tree_cowork_quote_order">
        <field name="name">项目报价单</field>
        <field name="model">cowork.quote.order</field>
        <field name="arch" type="xml">
            <tree string="项目报价单" default_order="write_date desc">
                <field name="name"/>
                <field name="project_id"/>
                <field name="title"/>
                <field name="partner_id"/>
                <field name="contact_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_search_cowork_quote_order">
        <field name="name">项目报价单</field>
        <field name="model">cowork.quote.order</field>
        <field name="arch" type="xml">
            <search string="项目报价单">
                <field name="name" filter_domain="[('name','ilike',self)]"/>
                <field name="project_id"/>
                <field name="title" filter_domain="[('title','ilike',self)]"/>
                <field name="partner_id"/>
                <field name="contact_id"/>
                <filter name="project_id" string="项目编号" context="{'group_by':'project_id'}"/>
                <filter name="partner_id" string="客户名称" context="{'group_by':'partner_id'}"/>
                <filter name="contact_id" string="联系人" context="{'group_by':'contact_id'}"/>
            </search>
        </field>
    </record>

    <!-- 项目报价单编号规则 -->
    <record id="seq_cowork_quote_order" model="ir.sequence">
        <field name="name">项目报价单</field>
        <field name="code">cowork.quote.order</field>
        <field name="prefix">CWQ</field>
        <field name="padding">5</field>
    </record>
    
    <record model="ir.actions.act_window" id="action_cowork_quote_order">
        <field name="name">项目报价单</field>
        <field name="res_model">cowork.quote.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
