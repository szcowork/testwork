<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_form_cowork_purchase_order_line">
        <field name="name">申购单明细</field>
        <field name="model">cowork.purchase.order.line</field>
        <field name="arch" type="xml">
            <form string="申购单明细">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <group>
                        <field name="categ_class_id" readonly="1"/>
                        <field name="class_id" readonly="1"/>
                        <field name="order_id"/>
                        <field name="categ_id"/>
                        <field name="product_id"/>
                        <field name="product_qty"/>
                        <field name="uom_id"/>
                        <field name="material"/>
                        <field name="type_id"/>
                        <field name="brand_id"/>
                        <field name="partner_id"/>
                        <field name="list_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="tax_ids"/>
                        <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="delivery"/>
                        <field name="comment"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_tree_cowork_purchase_order_line">
        <field name="name">申购单明细</field>
        <field name="model">cowork.purchase.order.line</field>
        <field name="arch" type="xml">
            <tree string="申购单明细" default_order="write_date desc" create="0" editable="bottom">
                <field name="categ_class_id" readonly="1"/>
                <field name="class_id" readonly="1"/>
                <field name="project_id" readonly="1"/>
                <field name="order_id" readonly="1"/>
                <field name="categ_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                <field name="product_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                <field name="product_qty" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                <field name="uom_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                <field name="material" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                <field name="type_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                <field name="brand_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                <field name="partner_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                <field name="list_price" widget="monetary" options="{'currency_field': 'currency_id'}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="delivery" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                <field name="comment" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                <field name="currency_id" invisible="1"/>
                <field name="state" invisible="1"/>
                <field name="purchase_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_search_cowork_purchase_order_line">
        <field name="name">申购单明细</field>
        <field name="model">cowork.purchase.order.line</field>
        <field name="arch" type="xml">
            <search string="申购单明细">
                <field name="project_id" readonly="1"/>
                <field name="order_id" readonly="1"/>
                <field name="categ_id"/>
                <field name="product_id"/>
                <field name="uom_id"/>
                <field name="material" filter_domain="[('material','ilike',self)]"/>
                <field name="type_id"/>
                <field name="brand_id"/>
                <field name="partner_id"/>
                <field name="categ_class_id"/>
                <field name="class_id"/>
                <field name="comment" filter_domain="[('comment','ilike',self)]"/>
                <filter string="询价中" name="quoteing" domain="[('purchase_id', '!=', False)]"/>
                <filter string="待询价" name="to_quote" domain="[('purchase_id', '=', False)]"/>
                <filter name="order_id" string="采购单据" context="{'group_by':'order_id'}"/>
                <filter name="categ_id_group" string="图号/名称" context="{'group_by':'categ_id'}"/>
                <filter name="product_id" string="名称/型号" context="{'group_by':'product_id'}"/>
                <filter name="uom_id" string="单位" context="{'group_by':'uom_id'}"/>
                <filter name="type_id" string="类型" context="{'group_by':'type_id'}"/>
                <filter name="brand_id" string="品牌" context="{'group_by':'brand_id'}"/>
                <filter name="partner_id" string="供应商" context="{'group_by':'partner_id'}"/>
                <filter name="categ_class_id" string="分类" context="{'group_by':'categ_class_id'}"/>
                <filter name="class_id" string="分类项目" context="{'group_by':'class_id'}"/>
            </search>
        </field>
    </record>
    <record id="graph_cowork_purchase_order_line" model="ir.ui.view">
         <field name="name">申购单明细graph</field>
         <field name="model">cowork.purchase.order.line</field>
         <field name="arch" type="xml">
             <graph string="申购单明细" type="line">
                 <field name="product_id" type="row"/>
                 <field name="amount" type="measure"/>
             </graph>
         </field>
    </record>
    <record id="pivot_cowork_purchase_order_line" model="ir.ui.view">
         <field name="name">申购单明细pivot</field>
         <field name="model">cowork.purchase.order.line</field>
         <field name="arch" type="xml">
             <pivot string="申购单明细" disable_linking="True">
                 <field name="amount" type="col"/>
                 <field name="product_id"  type="row"/>
                 <field name="amount" type="measure"/>
                 <!-- <field name="amount"/> -->
             </pivot>
         </field>
    </record>

    <record model="ir.actions.act_window" id="action_cowork_purchase_order_line">
        <field name="name">申购单明细</field>
        <field name="res_model">cowork.purchase.order.line</field>
        <field name="view_mode">tree,graph,pivot</field>
        <field name="context">{'search_default_categ_id_group':1}</field>
    </record>

    <record id="action_ps_purchase_requisition_line_1" model="ir.actions.server">
        <field name="name">拟询价单</field>
        <field name="model_id" ref="cowork_project_management_flow.model_cowork_purchase_order_line"/>
        <field name="state">code</field>
        <field name="code">
        if records:
            action = records.action_be_purchase()
        </field>
    </record>

    <record model="ir.ui.view" id="view_form_cowork_purchase">
        <field name="name">拟询价单</field>
        <field name="model">cowork.purchase</field>
        <field name="arch" type="xml">
            <form string="拟询价单">
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                    <group>
                        <field name="apply_time" readonly="1"/>
                        <field name="user_id" readonly="1"/>
                    </group>
                    <group string="申购列表">
                        <field name="line_id" nolabel="1" readonly="1">
                            <tree editable="bottom">
                                <field name="partner_id"/>
                                <field name="categ_id"/>
                                <field name="product_id"/>
                                <field name="product_qty"/>
                                <field name="uom_id"/>
                                <field name="material"/>
                                <field name="type_id"/>
                                <field name="brand_id"/>
                                <field name="list_price"/>
                                <field name="tax_ids" widget="many2many_tags" options="{'no_create': True}" domain="[('type_tax_use','=','purchase')]"/>
                                <field name="amount"/>
                                <field name="delivery"/>
                                <field name="comment"/>
                                <field name="currency_id" invisible="1"/>
                            </tree>
                        </field>
                    </group>
                    <hr/>
                    <button string="1.生成询价列表" type="object" class="oe_highlight" name="generate_plines"/>
                    -
                    <button string="2.下载询价列表" type="object" class="oe_highlight" name="return_purchase"/>
                    -
                    <button string="3.更新申购列表↑↑" type="object" class="oe_highlight" name="update_purchase"/>
                    <group string="询价列表">
                        <field name="pline_id" nolabel="1">
                            <tree editable="bottom">
                                <field name="partner_id" domain="[('supplier','=',True)]" context="{'default_supplier':True}"/>
                                <field name="categ_id"/>
                                <field name="product_id"/>
                                <field name="product_qty"/>
                                <field name="uom_id" readonly="1"/>
                                <field name="material" readonly="1"/>
                                <field name="type_id" readonly="1"/>
                                <field name="brand_id" readonly="1"/>
                                <field name="list_price"/>
                                <field name="tax_ids" widget="many2many_tags" options="{'no_create': True}" domain="[('type_tax_use','=','purchase')]"/>
                                <field name="amount"/>
                                <field name="delivery"/>
                                <field name="comment"/>
                                <field name="currency_id" invisible="1"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_tree_cowork_purchase">
        <field name="name">拟询价单</field>
        <field name="model">cowork.purchase</field>
        <field name="arch" type="xml">
            <tree string="拟询价单" default_order="write_date desc">
                <field name="name"/>
                <field name="user_id"/>
                <field name="apply_time"/>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_cowork_purchase">
        <field name="name">拟询价单</field>
        <field name="res_model">cowork.purchase</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
